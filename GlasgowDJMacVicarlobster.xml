         <head
             xml:id="AOHenley_GlasgowDJMacVicarlobster-d0e32"
            >The Lobster</head>
         <entry xml:id="AOHenley_GlasgowDJMacVicarlobster-idp109754168">
            <form>
               <orth>firionn</orth>
            </form>
            <def>male.</def>
         </entry>
         <entry xml:id="AOHenley_GlasgowDJMacVicarlobster-idp109799240">
            <form>
               <orth>boirionn</orth>
            </form>
            <def>female.</def>
         </entry>
         <entry xml:id="AOHenley_GlasgowDJMacVicarlobster-idp109752944">
            <form>
               <orth>ighnean? (inean?)</orth>
            </form>
            <def>claws.</def>
         </entry>
