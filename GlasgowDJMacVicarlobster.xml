         <entry xml:id="AOHenley_GlasgowDJMacVicarlobster-idp109687784">
            <form>
               <orth>brothadh</orth>
               <pron>[about rope]</pron>
            </form>
            <def>[about rope] disintegrating.</def>
         </entry>
         <entry xml:id="AOHenley_GlasgowDJMacVicarlobster-idola23">
